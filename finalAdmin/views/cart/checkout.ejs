<style>

/* Apply styles only within the checkout container */
#checkout-page {
  font-family: 'Arial', sans-serif;
  background-color: #f8f8f8;
  margin: 15px;
  padding: 20px;
  max-width: 800px;
  margin: 20px auto;
  border-radius: 6px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

/* Header styling */
#checkout-page h2 {
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  margin-top: 15px;
  color: #333;
  text-transform: uppercase;
  letter-spacing: 1px;
}

/* Checkout List Styling */
#checkout-page ul {
  list-style-type: none;
  padding: 0;
  margin: 12px 0;
}

#checkout-page li {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  padding: 12px;
  border-radius: 5px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  margin-bottom: 12px;
  transition: box-shadow 0.3s ease, transform 0.3s ease;
}

#checkout-page li:hover {
  transform: translateY(-2px);
  box-shadow: 0 3px 8px rgba(0, 0, 0, 0.15);
}

#checkout-page li img {
  width: 45px;
  height: auto;
  border-radius: 5px;
}

#checkout-page li strong {
  font-size: 14px;
  color: #333;
  margin-left: 10px;
}

#checkout-page li span {
  font-size: 12px;
  color: #777;
  margin-left: 8px;
  display: block;
}

/* Form Styling */
#checkout-page form {
  display: flex;
  flex-direction: column;
  gap: 12px;
  max-width: 550px;
  margin: 15px auto;
}

#checkout-page label {
  font-size: 12px;
  color: #333;
  font-weight: bold;
}

#checkout-page input[type="text"],
#checkout-page input[type="email"],
#checkout-page input[type="tel"] {
  padding: 8px;
  font-size: 14px;
  border-radius: 4px;
  border: 1px solid #ddd;
  width: 100%;
  transition: border-color 0.3s ease;
}

#checkout-page input[type="text"]:focus,
#checkout-page input[type="email"]:focus,
#checkout-page input[type="tel"]:focus {
  border-color: #007bff;
  outline: none;
}

/* Button Styling */
#checkout-page button {
  padding: 10px 18px;
  background-color: #28a745;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-size: 14px;
  transition: background-color 0.3s ease;
  width: 100%;
}

#checkout-page button:hover {
  background-color: #218838;
}

/* Total Section */
#checkout-page h3 {
  text-align: right;
  font-size: 18px;
  margin-top: 12px;
  color: #333;
  font-weight: bold;
}

/* Empty Cart Message */
#checkout-page p {
  text-align: center;
  font-size: 14px;
  color: #ff4d4d;
  margin-top: 30px;
  font-weight: bold;
}

/* Styling for the 'Proceed to Checkout' button */
#checkout-page .checkout-btn {
  display: inline-block;
  margin-top: 15px;
  padding: 8px 16px;
  background-color: #007bff;
  color: white;
  font-size: 14px;
  text-decoration: none;
  border-radius: 4px;
  transition: background-color 0.3s ease;
}

#checkout-page .checkout-btn:hover {
  background-color: #0056b3;
}

</style>


<div id="checkout-page">
  <h2>Checkout</h2>

  <% if (cart && cart.length > 0) { %>
    <ul>
      <% cart.forEach(item => { %>
        <li>
          <img src="<%= item.image %>" alt="<%= item.title %>" width="50">
          <strong><%= item.title %></strong>
          <span>Price: $<%= item.price %></span>
          <span>Quantity: <%= item.quantity %></span>
        </li>
      <% }); %>
    </ul>

    <h3>Total: $<%= total %></h3>
    <form action="/checkout/submit" method="POST">
      <label>Name: <input type="text" name="name" required></label>
      <label>Address: <input type="text" name="address" required></label>
      <label>Email: <input type="email" name="email" required></label>
      <label>Phone: <input type="tel" name="phone" required></label>
      <button type="submit">Submit Order</button>
    </form>
  <% } else { %>
    <p>Your cart is empty.</p>
  <% } %>
</div>
