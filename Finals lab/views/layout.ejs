    <style>
        /* Flash Message Styles */
.alert {
    margin: 20px auto;
    padding: 15px;
    max-width: 800px;
    border-radius: 8px;
    font-size: 16px;
    text-align: center;
    font-family: 'Open Sans', sans-serif;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    animation: fadeOut 5s ease forwards; /* Optional fade-out animation */
}

.alert.alert-danger {
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
}

.alert.alert-success {
    background-color: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
}

/* Close Button Styling */
.alert .close-btn {
    float: right;
    font-size: 20px;
    font-weight: bold;
    color: inherit;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
}

/* Animation for Fade Out */
@keyframes fadeOut {
    0% {
        opacity: 1;
    }
    90% {
        opacity: 0.1;
    }
    100% {
        opacity: 0;
        display: none;
    }
}

    </style>

</head>
<!-- layout.ejs -->
<body>
    <!-- Flash Message Display -->
   
    <%- include("partials/header") %>
    <main>
        <%- body %>
    </main>

    <% if (messages.error) { %>
        <div class="alert alert-danger">
            <%= messages.error %>
        </div>
    <% } %>

    <% if (messages.success) { %>
        <div class="alert alert-success">
            <%= messages.success %>
        </div>
    <% } %>

    <%- include("partials/footer") %>
</body>

</html>                    