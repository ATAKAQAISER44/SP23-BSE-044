<style>
/* General Footer Styling */
footer {
    background-color: #222;
    color: #fff;
    padding: 20px 0;
    font-family: Arial, sans-serif;
    font-size: 12px;
    text-align: center;
}

.footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 15px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

/* Newsletter Section */
.newsletter-section {
    text-align: center;
    margin-bottom: 20px;
}

.newsletter-section h2 {
    font-size: 14px;
    margin-bottom: 5px;
    text-transform: uppercase;
}

.newsletter-section p {
    margin-bottom: 10px;
    font-size: 12px;
    line-height: 1.4;
}

.newsletter-form {
    display: flex;
    justify-content: center;
    gap: 10px;
}

.email-input {
    padding: 8px;
    font-size: 12px;
    border: 1px solid #ccc;
    border-radius: 5px;
    width: 200px;
}

.submit-btn {
    padding: 8px 15px;
    background-color: #f7941e;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 12px;
    text-transform: uppercase;
}

.submit-btn:hover {
    background-color: #e57b1a;
}

/* Footer Links */
.footer-links {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 20px;
    margin-bottom: 20px;
}

.footer-column {
    text-align: center;
    margin: 5px;
    flex: 1;
    min-width: 150px;
}

.footer-column h5 {
    font-size: 14px;
    margin-bottom: 5px;
    text-transform: uppercase;
    color: #f7941e;
}

.footer-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.footer-column ul li {
    margin-bottom: 5px;
}

.footer-column ul li a {
    color: #ccc;
    text-decoration: none;
    font-size: 12px;
}

.footer-column ul li a:hover {
    color: #f7941e;
}

/* Social Section */
.social-section h5 {
    font-size: 14px;
    margin-bottom: 5px;
    text-transform: uppercase;
    color: #f7941e;
}

.social-section ul {
    display: flex;
    justify-content: center;
    list-style: none;
    padding: 0;
    margin: 0;
    gap: 10px;
}

.social-section ul li a {
    color: #ccc;
    font-size: 14px;
    text-decoration: none;
}

.social-section ul li a:hover {
    color: #f7941e;
}

/* Footer Bottom */
.footer-bottom {
    text-align: center;
    font-size: 10px;
    color: #aaa;
    margin-top: 20px;
}

/* Navbar Styling */
.navbar-nav {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 80px;
}

.nav-item {
    display: inline;
}

.nav-link {
    text-decoration: none;
    font-size: 14px;
    color: #ccc;
    transition: color 0.3s ease-in-out;
}

.nav-link:hover {
    color: #f7941e;
}

.user-info {
    display: flex;
    align-items: center;
    gap: 10px;
}

.welcome-text {
    font-size: 14px;
}

.btn-outline-light {
    font-size: 12px;
    padding: 5px 10px;
    border: 1px solid #f7941e;
    color: #f7941e;
    background: transparent;
    transition: all 0.3s ease-in-out;
}

.btn-outline-light:hover {
    background-color: #f7941e;
    color: #fff;
    border-color: #f7941e;
}

nav {
    margin-bottom: 30px;
}
</style>  

