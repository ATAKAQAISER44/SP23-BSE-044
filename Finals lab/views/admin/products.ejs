<div class="container mx-4">
    <!-- Create New Product Button -->
    <a href="/admin/create" class="btn create-product-btn mb-4">Create New Product</a>

    <!-- Product Table -->
     
    <div class="table-responsive">
        <table class="table custom-table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Is Featured</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% for( let index = 0; index < products.length; index++ ) { %>
                    <tr>
                        <td><%= products[index].title %></td>
                        <td><%= products[index].description %></td>
                        <td><%= products[index].price %></td>
                        <td><%= products[index].isFeatured %></td>
                        <td>
                            <a href="/admin/products/edit/<%= products[index]._id %>" class="btn action-btn edit-btn">Edit</a>
                            <a href="/admin/products/delete/<%= products[index]._id %>" class="btn action-btn delete-btn">Delete</a>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<style>
/* Create New Product Button */
.create-product-btn {
    background-color: #000; /* Black */
    color: white;
    padding: 12px 24px;
    font-size: 16px;
    border-radius: 8px;
    text-decoration: none;
    display: inline-block;
    transition: background-color 0.3s ease;
    text-align: center;
}

.create-product-btn:hover {
    background-color: #333; /* Darker black */
}

/* Table Styling */
.custom-table {
    width: 80%; /* Set width to 80% */
    margin: 20px auto; /* Center the table horizontally */
    border-collapse: collapse;
    background-color: #f9f9f9;
    border-radius: 8px;
    overflow: hidden;
}

.custom-table th, .custom-table td {
    padding: 12px;
    text-align: left;
    font-size: 14px;
    color: #333;
}

.custom-table th {
    background-color: #000; /* Black header */
    color: white;
    font-weight: bold;
    text-transform: uppercase;
}

.custom-table tr:nth-child(even) {
    background-color: #f1f1f1; /* Light grey for even rows */
}

.custom-table tr:hover {
    background-color: #f4f4f4; /* Light hover effect */
}

/* Action Buttons */
.action-btn {
    padding: 8px 16px;
    font-size: 14px;
    border-radius: 5px;
    text-decoration: none;
    margin-right: 10px;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

/* Edit Button */
.edit-btn {
    background-color: #ffc107; /* Yellow */
    color: black;
}

.edit-btn:hover {
    background-color: #e0a800;
    transform: translateY(-2px); /* Slight lift effect */
}

/* Delete Button */
.delete-btn {
    background-color: #dc3545; /* Red */
    color: white;
}

.delete-btn:hover {
    background-color: #c82333;
    transform: translateY(-2px); /* Slight lift effect */
}

/* Responsive Table for Small Screens */
.table-responsive {
    overflow-x: auto;
    display: flex;
    justify-content: center; /* Center the table inside the container */
}

@media (max-width: 768px) {
    .create-product-btn {
        font-size: 14px;
        padding: 8px 16px;
    }

    .custom-table th, .custom-table td {
        font-size: 12px;
        padding: 8px;
    }

    .action-btn {
        padding: 6px 12px;
        font-size: 12px;
    }
}
</style>
